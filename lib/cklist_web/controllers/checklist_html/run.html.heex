<.header>
  <%= @checklist.title %>
  <:subtitle><%= @checklist.description %></:subtitle>
</.header>

<.progress_bar steps={@steps} done={@steps_done} />

<.checklist_run checklist={@checklist} step_state={@step_state} completed={@completed} />
<.sequential_run checklist={@checklist} current_step={@current_step} next_step={@next_step} completed={@completed} />
